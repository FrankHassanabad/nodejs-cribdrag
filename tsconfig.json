{
  "compilerOptions": {
    "alwaysStrict": true,
    "lib": ["es6"],
    "module": "commonJS",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dest/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
